# ป้องกันการเข้าถึงไฟล์ข้อมูล
<Files "members.json">
    Require all denied
</Files>

# ป้องกันการเข้าถึงไฟล์ config
<FilesMatch "\.(json|md)$">
    Require all denied
</FilesMatch>

# อนุญาตเฉพาะ api.php
<FilesMatch "^api\.php$">
    Require all granted
</FilesMatch>

